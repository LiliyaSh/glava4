#include <iostream>
struct Pizza {
	char name[100];
	double diametr;
	double weight;
};
int main() {
	using namespace std;
	Pizza yourPizza;
	cout << "Enter Name: ";
	cin.getline(yourPizza.name, 100);
	cout << "Enter diametr: ";
	cin >> yourPizza.diametr;
	cout << "Enter weight: ";
	cin >> yourPizza.weight;
	cout << "Pizza: " << yourPizza.name << endl << "Diametr: " << yourPizza.diametr << endl << "Weight: " << yourPizza.weight << endl;
	return 0;
}
